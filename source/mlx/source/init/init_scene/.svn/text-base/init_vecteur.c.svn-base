#include	"raytracer.h"
#include	"struct_raytracer.h"

void		init_vec(t_coordonne *vec, double x, double y)
{
  vec->x = 1000.000;
  vec->y = ((SIZE_WIN_X / 2.000) - x);
  vec->z = ((SIZE_WIN_Y / 2.000) - y);
}
